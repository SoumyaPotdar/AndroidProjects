<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bridgelabz.timepicker.MainActivity">


    <TextView
        android:text="current time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="69dp"
        android:id="@+id/textView1main"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="301dp"
        android:id="@+id/timePickermain"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView1main" />

    <Button
        android:text="get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1main"
        android:layout_toEndOf="@+id/textView1main"
        android:layout_marginStart="80dp"
        android:layout_marginTop="138dp"
        android:id="@+id/changetimemain" />
</RelativeLayout>
